@model List<Bipins.AI.Trading.Application.Contracts.ActionRequired>
@{
    ViewData["Title"] = "Pending Actions";
}

<h2>Pending Actions</h2>

<div class="row mt-4">
    <div class="col-md-12">
        @if (Model.Any())
        {
            @foreach (var action in Model)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            @action.Action - @action.Symbol
                            <span class="badge bg-info">Confidence: @action.Confidence.ToString("F2")</span>
                        </h5>
                        <p class="card-text">@action.Rationale</p>
                        <p><strong>Quantity:</strong> @(action.Quantity?.ToString() ?? "N/A")</p>
                        <p><strong>Requested:</strong> @action.RequestedAt</p>
                        <form asp-action="Approve" method="post" class="d-inline">
                            <input type="hidden" name="decisionId" value="@action.DecisionId" />
                            <button type="submit" class="btn btn-success">Approve</button>
                        </form>
                        <form asp-action="Reject" method="post" class="d-inline">
                            <input type="hidden" name="decisionId" value="@action.DecisionId" />
                            <button type="submit" class="btn btn-danger">Reject</button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">No pending actions</p>
        }
    </div>
</div>
