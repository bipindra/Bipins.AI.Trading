<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trading Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
</head>
<body>
    <!-- Sidebar Overlay for Mobile -->
    <div id="sidebarOverlay" class="sidebar-overlay"></div>

    <!-- Sidebar -->
    <aside id="sidebar" class="sidebar">
        <div class="sidebar-header">
            <h5>Trading Platform</h5>
            <button id="sidebarToggle" class="sidebar-toggle" type="button">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        
        <ul class="sidebar-menu">
            <!-- Dashboard -->
            <li class="menu-group">
                <div class="menu-group-title">Main</div>
                <ul class="menu-group">
                    <li class="menu-item">
                        <a asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-speedometer2"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                </ul>
            </li>

            <!-- Trading Group -->
            <li class="menu-group">
                <div class="menu-group-title">Trading</div>
                <ul class="menu-group">
                    <li class="menu-item">
                        <a asp-controller="Charts" asp-action="Index">
                            <i class="bi bi-graph-up"></i>
                            <span>Charts</span>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-controller="Portfolio" asp-action="Index">
                            <i class="bi bi-wallet2"></i>
                            <span>Portfolio</span>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-controller="Orders" asp-action="Index">
                            <i class="bi bi-list-check"></i>
                            <span>Orders</span>
                        </a>
                    </li>
                    <li class="menu-item has-submenu">
                        <div class="menu-link">
                            <i class="bi bi-clipboard-data"></i>
                            <span>Analytics</span>
                        </div>
                        <ul class="submenu">
                            <li class="submenu-item">
                                <a asp-controller="Decisions" asp-action="Index">
                                    <i class="bi bi-diagram-3"></i>
                                    <span>Decisions</span>
                                </a>
                            </li>
                            <li class="submenu-item">
                                <a asp-controller="Actions" asp-action="Index">
                                    <i class="bi bi-hourglass-split"></i>
                                    <span>Pending Actions</span>
                                </a>
                            </li>
                            <li class="submenu-item">
                                <a asp-controller="SystemEvents" asp-action="Index">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    <span>System Events</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </li>

            <!-- Configuration Group -->
            <li class="menu-group">
                <div class="menu-group-title">Configuration</div>
                <ul class="menu-group">
                    <li class="menu-item has-submenu">
                        <div class="menu-link">
                            <i class="bi bi-gear"></i>
                            <span>Strategies</span>
                        </div>
                        <ul class="submenu">
                            <li class="submenu-item">
                                <a asp-controller="Strategies" asp-action="Index">
                                    <i class="bi bi-list-ul"></i>
                                    <span>All Strategies</span>
                                </a>
                            </li>
                            <li class="submenu-item">
                                <a asp-controller="Strategies" asp-action="Create">
                                    <i class="bi bi-plus-circle"></i>
                                    <span>Create Strategy</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="menu-item">
                        <a asp-controller="Trading" asp-action="Index">
                            <i class="bi bi-toggle-on"></i>
                            <span>Trading Control</span>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-controller="Settings" asp-action="Index">
                            <i class="bi bi-sliders"></i>
                            <span>Settings</span>
                        </a>
                    </li>
                </ul>
            </li>

            <!-- AI & Analytics Group -->
            <li class="menu-group">
                <div class="menu-group-title">AI & Analytics</div>
                <ul class="menu-group">
                    <li class="menu-item">
                        <a asp-controller="Agents" asp-action="Index">
                            <i class="bi bi-robot"></i>
                            <span>AI Agent</span>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-controller="Indicators" asp-action="Index">
                            <i class="bi bi-bar-chart"></i>
                            <span>Indicators</span>
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </aside>

    <!-- Main Content -->
    <div id="mainContent" class="main-content">
        <!-- Top Bar -->
        <div class="top-bar">
            <div class="top-bar-left">
                <button id="topBarToggle" class="top-bar-toggle" type="button">
                    <i class="bi bi-list"></i>
                </button>
                <h6 class="mb-0">@ViewData["Title"]</h6>
            </div>
            <div class="top-bar-right">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="user-info">
                        <i class="bi bi-person-circle"></i>
                        <span>@User.Identity.Name</span>
                    </div>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                }
            </div>
        </div>

        <!-- Page Content -->
        <div class="container-fluid p-4">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/sidebar.js"></script>
    @await RenderSectionAsync("Styles", required: false)
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
