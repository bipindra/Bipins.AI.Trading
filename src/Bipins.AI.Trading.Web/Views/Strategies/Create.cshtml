@model Bipins.AI.Trading.Domain.Entities.Strategy
@{
    ViewData["Title"] = "Create Strategy";
}

<h2>Create Strategy</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <h5>Please fix the following errors:</h5>
        <ul class="mb-0">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Create" method="post" id="strategyForm">
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
            
            <div class="mb-3">
                <label asp-for="Timeframe" class="form-label">Timeframe</label>
                <select asp-for="Timeframe.Value" class="form-select" id="timeframeSelect">
                    <option value="1m">1 Minute</option>
                    <option value="5m" selected>5 Minutes</option>
                    <option value="15m">15 Minutes</option>
                    <option value="1h">1 Hour</option>
                    <option value="1d">1 Day</option>
                </select>
            </div>
            
            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="Enabled" class="form-check-input" type="checkbox" />
                    <label asp-for="Enabled" class="form-check-label">Enabled</label>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-12">
            <h4>Alert Criteria</h4>
            <p class="text-muted">Add one or more alert criteria. When all criteria are met, the strategy action will trigger.</p>
            <div id="alertsContainer">
                <!-- Alerts will be added here dynamically -->
            </div>
            <button type="button" class="btn btn-secondary mt-2" onclick="addAlert()">
                <i class="bi bi-plus-circle"></i> Add Alert Criteria
            </button>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-12">
            <h4>Alert Combinations (Optional)</h4>
            <p class="text-muted">Combine multiple alerts with AND/OR logic.</p>
            <div id="conditionsContainer">
                <!-- Conditions will be added here dynamically -->
            </div>
            <button type="button" class="btn btn-secondary mt-2" onclick="addCondition()">
                <i class="bi bi-plus-circle"></i> Add Combination
            </button>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-lightning-charge"></i> Strategy Action</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Select the action to take when all alert criteria are met:</p>
                    <div class="mb-3">
                        <label class="form-label">Action</label>
                        <select class="form-select" id="finalAction" name="finalAction" required>
                            <option value="">-- Select Action --</option>
                            <option value="Buy">Buy</option>
                            <option value="Sell">Sell</option>
                        </select>
                        <small class="form-text text-muted">This action will be triggered when all alert criteria are satisfied.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Save Strategy</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

<!-- Hidden fields for alerts and conditions -->
<input type="hidden" id="alertsJson" name="AlertsJson" />
<input type="hidden" id="conditionsJson" name="ConditionsJson" />

@section Scripts {
    <script>
        let alertCounter = 0;
        let conditionCounter = 0;
        const alerts = [];
        const conditions = [];
        
        function addAlert() {
            const alertId = 'alert-' + alertCounter++;
            const alertNumber = alertCounter;
            const alertHtml = `
                <div class="card mb-3" id="${alertId}">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="mb-0">Alert Criteria ${alertNumber}</h6>
                            <button type="button" class="btn btn-sm btn-danger" onclick="removeAlert('${alertId}')">
                                <i class="bi bi-trash"></i> Remove
                            </button>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <label class="form-label">Type</label>
                                <select class="form-select indicator-type" onchange="updateAlertFields('${alertId}')">
                                    <option value="Price">Price</option>
                                    <option value="MACD">MACD</option>
                                    <option value="RSI">RSI</option>
                                    <option value="Stochastic">Stochastic</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Condition</label>
                                <select class="form-select condition-type" id="${alertId}-condition">
                                    <option value="GreaterThan">Above</option>
                                    <option value="LessThan">Below</option>
                                    <option value="RisesAbove">Rises Above</option>
                                    <option value="FallsBelow">Falls Below</option>
                                    <option value="CrossesAbove">Crosses Above</option>
                                    <option value="CrossesBelow">Crosses Below</option>
                                    <option value="Equals">Equals</option>
                                </select>
                            </div>
                            <div class="col-md-3" id="${alertId}-target-container">
                                <label class="form-label">Target Field</label>
                                <select class="form-select target-field" id="${alertId}-target">
                                    <option value="">N/A</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Threshold/Value</label>
                                <input type="number" class="form-control threshold" step="0.01" placeholder="Enter value" required />
                            </div>
                        </div>
                    </div>
                </div>
            `;
            document.getElementById('alertsContainer').insertAdjacentHTML('beforeend', alertHtml);
            alerts.push({ id: alertId, number: alertNumber });
            updateConditionAlertOptions();
        }
        
        function updateAlertFields(alertId) {
            const indicatorType = document.querySelector(`#${alertId} .indicator-type`).value;
            const targetContainer = document.getElementById(`${alertId}-target-container`);
            const targetField = document.getElementById(`${alertId}-target`);
            const conditionSelect = document.getElementById(`${alertId}-condition`);
            
            // Update condition options based on indicator type
            if (indicatorType === 'Price') {
                conditionSelect.innerHTML = `
                    <option value="GreaterThan">Above</option>
                    <option value="LessThan">Below</option>
                `;
                targetContainer.style.display = 'none';
                targetField.innerHTML = '<option value="">N/A</option>';
            } else {
                conditionSelect.innerHTML = `
                    <option value="RisesAbove">Rises Above</option>
                    <option value="FallsBelow">Falls Below</option>
                    <option value="CrossesAbove">Crosses Above</option>
                    <option value="CrossesBelow">Crosses Below</option>
                    <option value="Equals">Equals</option>
                    <option value="GreaterThan">Greater Than</option>
                    <option value="LessThan">Less Than</option>
                `;
                targetContainer.style.display = 'block';
                targetField.innerHTML = '<option value="">N/A</option>';
                
                if (indicatorType === 'MACD') {
                    targetField.innerHTML += '<option value="MACD">MACD</option>';
                    targetField.innerHTML += '<option value="Signal">Signal</option>';
                    targetField.innerHTML += '<option value="Histogram">Histogram</option>';
                } else if (indicatorType === 'Stochastic') {
                    targetField.innerHTML += '<option value="PercentK">%K</option>';
                    targetField.innerHTML += '<option value="PercentD">%D</option>';
                } else if (indicatorType === 'RSI') {
                    targetField.innerHTML += '<option value="RSI">RSI</option>';
                }
            }
        }
        
        function removeAlert(alertId) {
            document.getElementById(alertId).remove();
            alerts.splice(alerts.findIndex(a => a.id === alertId), 1);
            updateConditionAlertOptions();
        }
        
        function addCondition() {
            const conditionId = 'condition-' + conditionCounter++;
            const conditionNumber = conditionCounter;
            const conditionHtml = `
                <div class="card mb-3" id="${conditionId}">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="mb-0">Combination ${conditionNumber}</h6>
                            <button type="button" class="btn btn-sm btn-danger" onclick="removeCondition('${conditionId}')">
                                <i class="bi bi-trash"></i> Remove
                            </button>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <label class="form-label">Left Alert</label>
                                <select class="form-select left-alert">
                                    <option value="">Select Alert</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Operator</label>
                                <select class="form-select operator">
                                    <option value="And">AND</option>
                                    <option value="Or">OR</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Right Alert</label>
                                <select class="form-select right-alert">
                                    <option value="">Select Alert</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <small class="text-muted">Note: Action is set in Strategy Action section above</small>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            document.getElementById('conditionsContainer').insertAdjacentHTML('beforeend', conditionHtml);
            conditions.push({ id: conditionId });
            updateConditionAlertOptions();
        }
        
        function removeCondition(conditionId) {
            document.getElementById(conditionId).remove();
            conditions.splice(conditions.findIndex(c => c.id === conditionId), 1);
        }
        
        function updateConditionAlertOptions() {
            const alertOptions = alerts.map(a => `<option value="${a.id}">Alert ${a.number}</option>`).join('');
            document.querySelectorAll('.left-alert, .right-alert').forEach(select => {
                const currentValue = select.value;
                select.innerHTML = '<option value="">Select Alert</option>' + alertOptions;
                if (currentValue && alertOptions.includes(`value="${currentValue}"`)) {
                    select.value = currentValue;
                }
            });
        }
        
        document.getElementById('strategyForm').addEventListener('submit', function(e) {
            // Validate final action
            const finalAction = document.getElementById('finalAction').value;
            if (!finalAction) {
                e.preventDefault();
                alert('Please select a Strategy Action (Buy or Sell)');
                return false;
            }
            
            // Collect alerts (without action)
            const alertsData = [];
            document.querySelectorAll('#alertsContainer .card').forEach(card => {
                const alertId = card.id;
                const indicatorType = card.querySelector('.indicator-type')?.value;
                const conditionType = card.querySelector('.condition-type')?.value;
                const targetField = card.querySelector('.target-field')?.value;
                const thresholdInput = card.querySelector('.threshold');
                const threshold = thresholdInput?.value;
                
                if (!indicatorType || !conditionType || !threshold) {
                    e.preventDefault();
                    alert('Please complete all fields for all alerts (Type, Condition, and Threshold/Value are required)');
                    return false;
                }
                
                const thresholdValue = parseFloat(threshold);
                if (isNaN(thresholdValue)) {
                    e.preventDefault();
                    alert(`Please enter a valid number for threshold in alert: ${alertId}`);
                    return false;
                }
                
                alertsData.push({
                    id: alertId,
                    indicatorType: indicatorType,
                    conditionType: conditionType,
                    targetField: targetField || null,
                    threshold: thresholdValue,
                    order: alertsData.length
                });
            });
            
            // Validate at least one alert
            if (alertsData.length === 0) {
                e.preventDefault();
                alert('Please add at least one alert criteria');
                return false;
            }
            
            // Collect conditions (without action) - only include complete conditions
            const conditionsData = [];
            document.querySelectorAll('#conditionsContainer .card').forEach(card => {
                const conditionId = card.id;
                const leftAlert = card.querySelector('.left-alert')?.value;
                const operator = card.querySelector('.operator')?.value;
                const rightAlert = card.querySelector('.right-alert')?.value;
                
                // Only include conditions that have both alerts selected
                if (leftAlert && rightAlert) {
                    conditionsData.push({
                        id: conditionId,
                        leftAlertId: leftAlert,
                        operator: operator || 'And',
                        rightAlertId: rightAlert,
                        order: conditionsData.length
                    });
                }
            });
            
            document.getElementById('alertsJson').value = JSON.stringify(alertsData);
            document.getElementById('conditionsJson').value = JSON.stringify(conditionsData);
        });
    </script>
}
