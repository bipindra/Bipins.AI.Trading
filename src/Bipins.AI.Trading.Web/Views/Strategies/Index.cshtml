@model List<Bipins.AI.Trading.Domain.Entities.Strategy>
@{
    ViewData["Title"] = "Strategies";
}

<h2>Strategies</h2>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="mb-3">
            <a asp-action="Create" class="btn btn-primary">Create New Strategy</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Timeframe</th>
                    <th>Enabled</th>
                    <th>Alerts</th>
                    <th>Conditions</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var strategy in Model)
                {
                    <tr>
                        <td>@strategy.Name</td>
                        <td>@strategy.Description</td>
                        <td>@strategy.Timeframe.Value</td>
                        <td>
                            <span class="badge bg-@(strategy.Enabled ? "success" : "secondary")">
                                @(strategy.Enabled ? "Yes" : "No")
                            </span>
                        </td>
                        <td>@strategy.Alerts.Count</td>
                        <td>@strategy.Conditions.Count</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@strategy.Id" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@strategy.Id" class="btn btn-sm btn-primary">Edit</a>
                            <form asp-action="ToggleEnabled" asp-route-id="@strategy.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-@(strategy.Enabled ? "warning" : "success")">
                                    @(strategy.Enabled ? "Disable" : "Enable")
                                </button>
                            </form>
                            <form asp-action="Delete" asp-route-id="@strategy.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this strategy?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
